<% provide(:title, 'New Book') %>
<h1>
  New Book

</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :"Title" %>
      <%= f.text_field :title %>

      <%= f.label :"Author" %>
      <%= f.collection_select(:author_id, Author.all, :id, :afull_name, {:include_blank => "Please select the author"}) %>

      <%= f.label :"Brief Description (not review)" %>
      <%= f.text_field :description %>

      <%= f.submit "Create Book", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
