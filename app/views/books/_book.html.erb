<li>
  <span class="content"><%= link_to book.title, book_path %>
  | Reviewed <%= pluralize(book.reviews.count, "time") %>
  </span>
  </br>
  <span class="timestamp">
    Added <%= time_ago_in_words(book.created_at) %> Ago. 
  </span>
  <% if current_user.admin? %>
    <%= link_to "delete", book, method: :delete,
                                     data: { confirm: "Your post will be permenantly deleted. Are you sure?" },
                                     title: book.title %>
  <% end %>
</li>
