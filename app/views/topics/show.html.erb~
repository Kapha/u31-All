<% provide(:title, @topic.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @topic.name %>, </h1>
      <h4>

      </h4>
    </section>
    <section>
      <h4> This topic has <%= pluralize(@topic.questions.count, "question") %>
      </h4>
    </section>
    <% if current_user.admin? %>
      <section>
        <%= link_to "delete", @topic, method: :delete, data: {confirm: "This will delete the current topic and all questions attached to it. Are you sure?" } %>
      </section>
    <% end %>
  </aside>
  <div class="span8">
    <section>
      <% if @topic.questions.any? %>
        <h4 class="microposts"><%= render @questions %></h4>
      <% else %>
        <h1>No one has asked any questions in the topic yet. </h1>
      <% end %>
    </section>
  </div>
</div>
