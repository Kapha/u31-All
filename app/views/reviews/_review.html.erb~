<% @book = review.book %>
<% @author = review.book.author %>
<% @user = review.user %>
<li>
  <span class="timestamp">
  Review of 
  <%= link_to review.book.title, @book %>, 
  Book by 
  <%= link_to review.book.author.afull_name, @author %>
  </span>
  <br />
  <span class="content">
  <%= review.text %>
  </span>
  <br />
  <span class="timestamp">
  This book was rated 
  <% if @review.rating == 1 %>
    "Awesome!"
  <% end %>
  <% if @review.rating == 2 %>
    "Good."
  <% end %>
  <% if @review.rating == 3 %>
    "OK."
  <% end %>
  <% if @review.rating == 4 %>
    "No Good."
  <% end %>
  <% if @review.rating == 5 %>
    "Absolutely Horrible."
  <% end %>
  by 
  <% if review.user == nil %>
    Test review
  <% else %>
    <%= link_to review.user.username, @user %>
  <% end %>
  <% if current_user.admin? %>
  |  <%= link_to "Delete", review, method: :delete,
                                   data: { confirm: "Your post will be permenantly deleted. Are you sure?"} %> 
  <% end %>
  </span>
</li> 

