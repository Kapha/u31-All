<% @book = review.book %>
<% @author = review.book.author %>
<% @user = review.user %>
<li>
  <span class="timestamp">
  Review of 
  <%= link_to review.book.title, @book %>, 
  Book by 
  <%= link_to review.book.author.afull_name, @author %>
  </span>
  <br />
  <span class="content">
  <%= review.text %>
  </span>
  <br />
  <span class="timestamp">
  This book was rated <%= review.rating %>
  by 
  <% if review.user == nil %>
    Test review
  <% else %>
    <%= link_to review.user, @user.username %>
  <% end %>
  <% if current_user.admin? %>
  |  <%= link_to "Delete", review, method: :delete,
                                   data: { confirm: "Your post will be permenantly deleted. Are you sure?"} %> 
  <% end %>
  </span>
</li> 

