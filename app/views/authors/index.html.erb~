<h1>The Author List </h1>
<%= link_to "List a new Author", new_author_path, class: "btn btn-large btn-primary" %>
<ul class="users">
  <% @authors.each do |author| %>
    <li>
      <%= link_to author.asurname, author %>,
      <%= link_to author.a1stname, author %>
      <br />
      <h5>Author has <%= pluralize(author.books.count, "book") %>
      <% if current_user.admin? %>
        | <%= link_to "delete", author, method: :delete,
                                      data: { confirm: "You sure?" } %>
      <% end %>
      </h5> 
    </li>
  <% end %>
</ul>

