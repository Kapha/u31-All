<li id="<%= question.id %>">
  <%= link_to gravatar_for(question.user), question.user %>
  <span class="user">
    <%= link_to question.user.username, question.user %>
    asked  the question, 
    "<%= link_to question.subject, question %>"
    in the topic of <%= question.topic.name %>
  </span>
  </br>
  <span class="content"><%= question.quest %></span>
  <br />
  <span class="timestamp">
    Posted <%= time_ago_in_words(question.created_at) %> ago.
  </span>
</li>
