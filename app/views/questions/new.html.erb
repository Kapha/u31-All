<% provide(:title, 'New Question') %>
<h1> New Question </h1>
<div class="row">
  <div class="span6 offset3">

    <%= form_for(@question) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :subject %>
      <%= f.text_field :subject %>

      <%= f.label :topic %>
      <%= f.collection_select(:topic, Topic.all, :id, :name, {:include_blank => "Please select the topic."}) %>

      <%= f.label :quest %>
      <%= f.text_field :quest %>

      <%= f.submit "Ask Question.", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
