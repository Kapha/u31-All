<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.username, user %>
  <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "Delete", user, method: :delete,
                                    data: { confirm: "You sure?" } %>
      | <% if user.admin? %>
          <%= link_to "Admin", admin_user_path(user), method: :post, data: {confirm: "This will remove admin rights from #{user.firstname} #{user.sirname}. Are you sure?"} %>
        <% else %>
          <%= link_to "Not-Admin", admin_user_path(user), method: :post, data: {confirm: "This will give #{user.firstname} #{user.sirname} admin rights. Are you sure?"} %>
          </%= render 'add_admin' %>
        <% end %>
  <% end %>
  <br />
  <% if user.weburl == "" %>
    User has no website defined
  <% else %>
    <%= link_to user.weburl, "http://#{user.weburl}" %>
  <% end %>
</li>
