<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.firstname, user %>
  <%= link_to user.sirname, user %>
  <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "Delete", user, method: :delete,
                                    data: { confirm: "You sure?" } %>
      | <% if user.admin? %>
          <%= link_to "Admin", admin_user_path(user), method: :post, data: {confirm: "This will remove admin rights from #{user.firstname} #{user.sirname} are you sure?"} %>
        <% else %>
          <%= link_to "Not-Admin", admin_user_path(user), method: :post %>
          </%= render 'add_admin' %>
        <% end %>
  <% end %>
</li>
